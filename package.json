{
  "name": "image-optimizer",
  "version": "1.1.0",
  "description": "Sharp ile toplu görsel optimize aracı - Desktop App",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64"
  },
  "keywords": [
    "image",
    "optimizer",
    "squoosh",
    "webp",
    "avif"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@squoosh/lib": "^0.5.3",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.imageoptimizer.app",
    "productName": "Image Optimizer",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "input",
        "to": "input",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "output",
        "to": "output",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
